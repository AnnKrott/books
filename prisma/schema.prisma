// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Book {
  id             String    @id @default(uuid())
  title          String
  authors        String
  description    String?
  thumbnail      String?
  elapsedTime    Int?      @default(0)
  timerStartedAt DateTime?
  createdAt      DateTime  @default(now())
}
